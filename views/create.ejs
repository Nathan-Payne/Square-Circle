<% include ./partials/header %>


<h1>Create new project</h1>
<form action="/create" method="POST" enctype="multipart/form-data">
    <label class="form">Project Title (valid filenames only)
        <input type="text" name="project[title]" placeholder="Title" required>
    </label>
    <label class="form">Lithuanian Project Title (not required if not available)
        <input type="text" name="project[titleLith]" placeholder="Lithuanian Title">
    </label>
    <label class="form">Project Type
        <select name="project[projectType]" id="" required>
            <option value="Graphic Design">Graphic Design</option>
            <option value="Photography">Photography</option>
            <option value="Art">Art</option>
        </select>
    </label>
    <label class="form">Thumbnail Description
        <textarea name="project[shortDesc]" cols="30" rows="3" placeholder="Thumbnail Description"></textarea>
    </label>
    <label class="form">English Description
        <textarea name="project[englishDesc]" cols="50" rows="10" placeholder="English Description (Long)"></textarea>
    </label>
    <label class="form">Lithuanian Description
        <textarea name="project[lithuanianDesc]" cols="50" rows="10" placeholder="Lithuanian Description (Long)"></textarea>
    </label>
    <label class="form">Project Date 
        <input type="date" name="project[projectDate]">
    </label>
    <label class="form">Image Upload (Maximum 10MB per image)
        <input type="file" name="image" accept="image/*" multiple required>
    </label>
    <label class="form">Horizontal grid position (a number between 1-12): 
        <input type="number" name="project[xPosition]" required>
    </label>
    <label class="form">Vertical grid position (a number between 1-24): 
        <input type="number" name="project[yPosition]" required>
    </label>
    <label class="form">Horizontal fine position (-12 to +12): 
        <input type="number" name="project[xFine]">
    </label>
    <label class="form">Vertical fine position (-12 to +12): 
        <input type="number" name="project[yFine]">
    </label>

    <label class="form">Create the project
        <input type="submit" value="Create Project">
    </label>
</form>



<% include ./partials/footer %>